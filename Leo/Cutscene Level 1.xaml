<Page x:Class="Leo.Cutscene_Level_1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Leo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Cutscene_Level_1">

    <Grid x:Name="CutsceneGrid" MouseLeftButtonUp="CutsceneGrid_MouseLeftButtonUp">
        <TextBlock x:Name="CutsceneTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" TextWrapping="Wrap" Margin="20" Foreground="White"/>
        <Button x:Name="ContinueButton" Content="Continue" Click="Continue_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,20" Visibility="Collapsed"/>
    </Grid>

</Page>
