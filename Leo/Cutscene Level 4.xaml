<Page x:Class="Leo.Cutscene_Level_4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Cutscene_Level_4">
    <Grid x:Name="CutsceneGrid" MouseLeftButtonUp="CutsceneGrid_MouseLeftButtonUp">
        <TextBlock x:Name="CutsceneTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" TextWrapping="Wrap" Margin="20" Foreground="White"/>
        <Button x:Name="ContinueButton" Content="Continue" Click="Continue_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,20" Visibility="Collapsed"/>
    </Grid>
</Page>
