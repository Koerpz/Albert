<Page x:Class="Leo.GeneralSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Leo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GeneralSettings">

    <Grid Background="White">
        <TextBlock Text="General Settings" FontSize="20" Margin="0, 0, 0, 10"/>
        <TextBlock Text="Difficulty" FontSize="15" Margin="0,40,0,0"/>
        <Button Content="Easy" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="112,35,0,0" Background="Green" Height="50" Width="75"/>
        <Button Content="Normal" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="187,35,0,0" Background="DarkOrange" Height="50" Width="75"/>
        <Button Content="Hard" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="262,35,0,0" Background="Red" Height="50" Width="75"/>
    </Grid>
</Page>
